@model ExamenViewModel

@{
    ViewData["Title"] = "MostrarPreguntas";
}


<section id="central">
    <h2>Simulador de exámenes gratuito impulsado por IA</h2>

    @if (Model != null && Model.Preguntas.Any())
    {
        <form method="post" asp-action="CorregirRespuestas" class="responder py-3">
                @for (int i = 0; i < Model.Preguntas.Count; i++)
                {
                    <li class="list-group-item">
                        <p>@Model.Preguntas[i].PreguntaTexto</p>
                        <input type="hidden" name="Preguntas[@i].PreguntaTexto" value="@Model.Preguntas[i].PreguntaTexto" />
                        <div class="form-group">
                            <label for="respuesta_@i" class="col-md-2 control-label">Respuesta:</label>
                            <div class="col-md-10">
                                <input type="text" id="respuesta_@i" name="Preguntas[@i].RespuestaUsuario" value="@Model.Preguntas[i].RespuestaUsuario" class="form-control" />
                            </div>
                        </div>
                    </li>
                }

            <input type="hidden" name="Resumen" value="@Model.Resumen" />
            <button type="submit" class="boton1 btn btn-lg btn-success w-50 mt-2">Confirmar respuestas</button>

        </form>
    }
    else
    {
        <p class="text-warning">No se pudieron generar preguntas.</p>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

</section>