@model ExamenModel

@{
    ViewData["Title"] = "MostrarPreguntas";
}

<div class="container">
    <h2 class="text-primary">Preguntas Generadas</h2>

    @if (Model != null && Model.Preguntas.Any())
    {
        <form method="post" asp-action="CorregirRespuestas" class="form-horizontal">
            <ul class="list-group">
                @for (int i = 0; i < Model.Preguntas.Count; i++)
                {
                    <li class="list-group-item">
                        <p>@Model.Preguntas[i].Texto</p>
                        <input type="hidden" name="Preguntas[@i].Texto" value="@Model.Preguntas[i].Texto" />
                        <div class="form-group">
                            <label for="respuesta_@i" class="col-md-2 control-label">Respuesta:</label>
                            <div class="col-md-10">
                                <input type="text" id="respuesta_@i" name="Preguntas[@i].RespuestaUsuario" value="@Model.Preguntas[i].RespuestaUsuario" class="form-control" />
                            </div>
                        </div>
                    </li>
                }
            </ul>
            <input type="hidden" name="Resumen" value="@Model.Resumen" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Corregir respuestas</button>
                </div>
            </div>
        </form>
    }
    else
    {
        <p class="text-warning">No se pudieron generar preguntas.</p>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }
</div>
