@model ExamenViewModel

@{
    ViewData["Title"] = "MostrarFeedback";
}
<div class="container">
    <h2 class="text-primary">Feedback de las Respuestas</h2>

@if (!string.IsNullOrEmpty(Model.Feedback))
{
        <div class="alert alert-info">
    <pre>@Model.Feedback</pre>
        </div>
}
else
{
        <p class="text-warning">No se pudo obtener el feedback.</p>
}

@if (ViewBag.Error != null)
{
        <div class="alert alert-danger">
            <strong>Error:</strong>@ViewBag.Error
        </div>
}
</div>