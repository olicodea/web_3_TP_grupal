@model ExamenViewModel

@{
    ViewData["Title"] = "Mostrar Examen";
}
<div class="container">
    <h2 class="text-primary">Detalles del examen</h2>

    @if (!string.IsNullOrEmpty(Model.Feedback))
    {   
        
        <div class="alert alert-info">
            <pre>Categoria: @ViewBag.Categoria</pre>
        </div>
        <div class="alert alert-info">
            <pre>Calificacion: @Model.Calificacion</pre>
        </div>
        <div class="alert alert-info">
            <pre>Fecha: @Model.FechaCreacion</pre>
        </div>
        
        <div class="alert alert-info">
            <pre>@Model.Feedback</pre>
        </div>
    }
    else
    {
        <p class="text-warning">No se pudo obtener el feedback.</p>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong>@ViewBag.Error
        </div>
    }
</div>
